<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cvMascotaGrid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_tarjeta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <ImageView
            android:id="@+id/imgFotoMascotaGrid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dog_picture"
            android:layout_gravity="center"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">


                <TextView
                    android:id="@+id/tvNumeroRateGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="@dimen/medida_texto_tarjeta" />

                <ImageView
                    android:id="@+id/imgHuesoAmarilloGrid"
                    android:layout_width="@dimen/medida_icono_hueso"
                    android:layout_height="@dimen/medida_icono_hueso"
                    android:src="@drawable/yellowbone"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp" />

        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>