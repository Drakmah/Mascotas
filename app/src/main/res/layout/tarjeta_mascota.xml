<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_tarjeta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivfotoMascota"
            android:layout_width="@dimen/medida_foto_tarjeta"
            android:layout_height="@dimen/medida_foto_tarjeta"
            android:src="@drawable/dog01"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageButton
                android:id="@+id/btnRate"
                android:layout_width="@dimen/medida_icono_hueso"
                android:layout_height="@dimen/medida_icono_hueso"
                android:background="@drawable/whitebone"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>




            <TextView
                android:id="@+id/tvNombreMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="@dimen/medida_texto_tarjeta"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvNumeroRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/medida_texto_tarjeta" />

                <ImageView
                    android:id="@+id/imgCantidadRate"
                    android:layout_width="@dimen/medida_icono_hueso"
                    android:layout_height="@dimen/medida_icono_hueso"
                    android:src="@drawable/yellowbone"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>